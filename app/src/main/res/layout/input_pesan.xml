<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputPemesanan">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/background_train">

        <View
            android:id="@+id/rectangle55"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/rectangle_5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/iv_backBtn"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="30dp"
            android:contentDescription="@string/desc_icon_back"
            android:src="@drawable/group_5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:layout_constraintTop_toTopOf="@id/rectangle55">

            <ImageView
                android:id="@+id/group_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/group_3"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:contentDescription="@string/tv_ex_todo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tv_stasiunTujuan_inptPesan"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="290dp"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="30dp"
                android:textStyle="bold"
                android:textSize="40sp"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:text="@string/tv_ex_ml"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tv_waktuTiba_inptPesan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="290dp"
                android:layout_marginTop="135dp"
                android:layout_marginEnd="42dp"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:text="@string/tv_cth_jamTiba"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tv_harga_inptPesan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="290dp"
                android:layout_marginTop="155dp"
                android:layout_marginEnd="42dp"
                android:textStyle="italic"
                android:textSize="14sp"
                android:textAlignment="center"
                android:textColor="@color/colorOrange"
                android:text="@string/tv_ex_harga"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tv_stasiunAwal_inptPesan"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="290dp"
                android:textStyle="bold"
                android:textSize="40sp"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:text="@string/tv_ex_stasiunAsal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tv_waktuBerangkat_inptPesan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="42dp"
                android:layout_marginTop="135dp"
                android:layout_marginEnd="290dp"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:text="@string/tv_ex_jamBrngkt"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tv_kereta_inptPesan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="42dp"
                android:layout_marginTop="155dp"
                android:layout_marginEnd="290dp"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:text="@string/tv_ex_kereta"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tv_kelas_inptPesan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="166dp"
                android:layout_marginTop="120dp"
                android:layout_marginRight="166dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:text="@string/tv_ex_kelas"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tv_durasiPerjalanan_inptPesan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="166dp"
                android:layout_marginTop="155dp"
                android:layout_marginRight="166dp"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:text="@string/tv_ex_durasiPerjalanan"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutHeader">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:backgroundTint="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/rectangle146"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/detail_pemesan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="220dp"
                    android:contentDescription="@string/tv_ex_todo"
                    android:src="@drawable/detail_pemesan"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/group_detailPemesan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/group_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:contentDescription="@string/dc_group_detailpemesan"
                    android:src="@drawable/group_6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/detail_pemesan" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_namaUser_inptPesan"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginStart="220dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="30dp"
                    android:autofillHints=""
                    android:background="@null"
                    android:hint="@string/ket_name"
                    android:maxLines="1"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_emailUser_inptPesan"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginStart="200dp"
                    android:layout_marginTop="65dp"
                    android:layout_marginEnd="30dp"
                    android:background="@null"
                    android:hint="@string/tv_hint_email"
                    android:maxLines="1"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <!--    DETAIL PENUMPANG 1        -->
            <LinearLayout
                android:id="@+id/group_detailPenumpang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/group_detailPemesan"
                tools:layout_editor_absoluteX="5dp">

                <ImageView
                    android:id="@+id/detail_penumpang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="190dp"
                    android:contentDescription="@string/dc_detailpenumpang"
                    android:src="@drawable/detail_penumpang_1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/group_6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/group_8"
                    android:orientation="vertical"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp">

                    <TextView
                        android:id="@+id/tv_kategoriPnmpng_inptPesan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:background="@null"
                        android:gravity="end"
                        android:text="@string/tv_ex_kategoriDewasa"
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/et_noKtpPnmpng_inptPesan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:background="@null"
                        android:gravity="end"
                        android:hint="@string/number"
                        android:imeOptions="actionSend"
                        android:inputType="number"
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp"
                        android:textStyle="normal"
                        android:autofillHints="" />

                    <EditText
                        android:id="@+id/et_namaPenumpang_inptPesan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:background="@null"
                        android:gravity="end"
                        android:hint="@string/tv_hint_namaLengkap"
                        android:imeOptions="actionSend"
                        android:inputType="textPersonName"
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp"
                        android:textStyle="normal"
                        android:autofillHints="" />

                </LinearLayout>

            </LinearLayout>

            <!--    END DETAIL PENUPMANG 1-->
            <!--            DETAIL HARGA   -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/group_detailPenumpang">

                <ImageView
                    android:id="@+id/detail_harga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="@string/dc_tv_detailharga"
                    android:src="@drawable/detail_harga" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/group_harga"
                    android:orientation="vertical"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp">

                    <TextView
                        android:id="@+id/tv_totalHarga_inptPesan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="8dp"
                        android:background="@null"
                        android:text="@string/tv_ex_totalHarga"
                        android:textColor="@color/colorOrange"
                        android:textSize="20sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tv_jmlhPenumpang_inptPesan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="12dp"
                        android:background="@null"
                        android:text="@string/tv_ex_detailHarga"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                </LinearLayout>


            </LinearLayout>


            <!--            END DETAIL HARGA    -->

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bar_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_checkOut_inptPesanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/menu_bar_enter"
        app:fabSize="auto"
        app:layout_anchorGravity="top|center"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:maxImageSize="60dp" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/rectangle_9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/dc_bardownbox"
            android:src="@drawable/rectangle_9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ic_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="64dp"

        android:layout_marginBottom="32dp"
        android:contentDescription="@string/cd_btn_home"
        android:src="@drawable/ic_home_24px"
        app:layout_constraintEnd_toStartOf="@+id/ic_vert"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:id="@+id/ic_vert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="24dp"
        android:contentDescription="@string/cd_btn_setting"
        android:src="@drawable/ic_more_vert_24px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ic_home"/>
</androidx.constraintlayout.widget.ConstraintLayout>