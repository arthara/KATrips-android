    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dtlPembayaran_CL_Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dtlPembayaran_LL_Totalharga_V">

        <View
            android:id="@+id/rectangle55"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:layout_constraintTop_toTopOf="@id/rectangle55">

            <ImageView
                android:id="@+id/group_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="80dp"
                android:layout_marginRight="20dp"
                android:contentDescription="@string/tv_ex_todo"
                android:src="@drawable/group_3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tv_detailPembayaran_stasiunTujuan"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="290dp"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="30dp"
                android:text="@string/tv_ex_ml"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="32dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tv_detailPembayaran_waktuTiba"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="290dp"
                android:layout_marginTop="135dp"
                android:layout_marginEnd="42dp"
                android:text="@string/tv_cth_jamTiba"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tv_detailPembayaran_harga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="290dp"
                android:layout_marginTop="155dp"
                android:layout_marginEnd="42dp"
                android:text="@string/tv_ex_harga"
                android:textAlignment="center"
                android:textColor="@color/colorOrange"
                android:textSize="14sp"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tv_detailPembayaran_stasiunAwal"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="290dp"
                android:text="@string/tv_ex_stasiunAsal"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="32dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tv_detailPembayaran_waktuBerangkat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="42dp"
                android:layout_marginTop="135dp"
                android:layout_marginEnd="290dp"
                android:text="@string/tv_ex_jamBrngkt"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tv_detailPembayaran_kereta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="42dp"
                android:layout_marginTop="155dp"
                android:layout_marginEnd="290dp"
                android:text="@string/tv_ex_kereta"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tv_detailPembayaran_kelas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="166dp"
                android:layout_marginTop="120dp"
                android:layout_marginRight="166dp"
                android:text="@string/tv_ex_kelas"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tv_detailPembayaran_durasiPerjalanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="166dp"
                android:layout_marginTop="145dp"
                android:layout_marginRight="166dp"
                android:text="@string/tv_ex_durasiPerjalanan"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                android:textStyle="normal" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/iv__detailPembayaran_backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="back button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/btnback_putih" />


    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dtlPembayaran_CL_Header"
        android:src="@drawable/infoakun_bg"/>

    <TextView
        android:id="@+id/tv_detailPembayaran_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/imageView10"
        app:layout_constraintEnd_toEndOf="@+id/imageView10"
        app:layout_constraintStart_toStartOf="@+id/imageView10"
        app:layout_constraintTop_toTopOf="@+id/imageView10"
        app:layout_constraintVertical_bias="0.120000005" />

    <TextView
        android:id="@+id/tv_detailPembayaran_useremail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/imageView10"
        app:layout_constraintEnd_toEndOf="@+id/imageView10"
        app:layout_constraintStart_toStartOf="@+id/imageView10"
        app:layout_constraintTop_toTopOf="@+id/imageView10"
        app:layout_constraintVertical_bias="0.83" />

    <LinearLayout
        android:id="@+id/dtlPembayaran_LL_Totalharga_V"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@drawable/iv_detailpembayaran_rectangle1"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dtlPembayaran_CL_main">

        <LinearLayout
            android:id="@+id/dtlPembayaran_LL_Totalharga_H1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:id="@+id/tv_detailPembayaran_labelTotalHarga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="64dp"
                android:text="TOTAL HARGA"
                android:textColor="@color/colorBlack"
                android:textSize="18dp">

            </TextView>

            <TextView
                android:id="@+id/tv_detailPembayaran_totalHarga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="64dp"
                android:gravity="center"
                android:text="@string/tv_ex_totalHarga"
                android:textColor="@color/colorBlack"
                android:textSize="24dp"></TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dtlPembayaran_LL_Totalharga_H2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:id="@+id/tv_detailPembayaran_detialPenumpang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="84dp"
                android:text="Dewasa x 1"
                android:textColor="@color/colorBlack"
                android:textSize="18dp">

            </TextView>

            <TextView
                android:id="@+id/tv_detailPembayaran_detailHarga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="84dp"
                android:gravity="end"
                android:text="@string/tv_ex_detailHarga"
                android:textColor="@color/colorBlack"
                android:textSize="18dp"></TextView>

        </LinearLayout>

    </LinearLayout>

    <include
        layout="@layout/component_caritiket_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>

