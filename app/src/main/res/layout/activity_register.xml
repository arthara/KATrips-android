<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spl_scre_new"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:foregroundGravity="center"
        android:src="@drawable/judul_login" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/register_etNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:autofillHints=""
            android:background="@drawable/bg_rectangle_edittext"
            android:hint="Nama Lengkap"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="#333"
            android:textColorHint="#555" />

        <EditText
            android:id="@+id/register_etAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:autofillHints=""
            android:background="@drawable/bg_rectangle_edittext"
            android:hint="Alamat"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="#333"
            android:textColorHint="#555" />

        <EditText
            android:id="@+id/register_tglLahir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:autofillHints=""
            android:background="@drawable/bg_rectangle_edittext"
            android:hint="Tanggal Lahir"
            android:padding="8dp"
            android:textColor="#333"
            android:textColorHint="#555" />

        <EditText
            android:id="@+id/register_etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:background="@drawable/bg_rectangle_edittext"
            android:hint="@string/email_hint"
            android:inputType="textEmailAddress"
            android:layout_marginVertical="12dp"
            android:padding="8dp"
            android:textColor="#333"
            android:textColorHint="#555" />

        <EditText
            android:id="@+id/register_etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:autofillHints=""
            android:background="@drawable/bg_rectangle_edittext"
            android:hint="@string/password_hint"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textColor="#333"
            android:textColorHint="#555" />

        <EditText
            android:id="@+id/register_etPasswordConfirmation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:autofillHints=""
            android:background="@drawable/bg_rectangle_edittext"
            android:hint="Konfirmasi Password"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textColor="#333"
            android:textColorHint="#555" />

        <ImageButton
            android:id="@+id/register_btnDaftar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@null"
            android:src="@drawable/btn_daftar" />

        <ImageButton
            android:id="@+id/register_btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@null"
            android:src="@drawable/btn_login_fresh" />


    </LinearLayout>

</RelativeLayout>